<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10">
            <TextView
                android:id="@+id/top_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="84sp"
                android:text="@string/zero"
                android:gravity="right"/>
            <TextView
                android:id="@+id/bottom_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="84sp"
                android:text="@string/zero"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/unit_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/inches"
                android:textSize="36sp"
                android:gravity="bottom|left"/>
            <TextView
                android:id="@+id/unit_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/centimeters"
                android:textSize="36sp"
                android:gravity="bottom|left"/>
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <Button
            android:id="@+id/button0"
            android:text="@string/zero"
            android:onClick="putNumber"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:id="@+id/button1"
            android:text="@string/one"
            android:onClick="putNumber"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:id="@+id/button2"
            android:text="@string/two"
            android:onClick="putNumber"
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            android:id="@+id/button3"
            android:text="@string/three"
            android:onClick="putNumber"
            android:layout_row="2"
            android:layout_column="2"/>
        <Button
            android:id="@+id/button4"
            android:text="@string/four"
            android:onClick="putNumber"
            android:layout_row="1"
            android:layout_column="0"/>
        <Button
            android:id="@+id/button5"
            android:text="@string/five"
            android:onClick="putNumber"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            android:id="@+id/button6"
            android:text="@string/six"
            android:onClick="putNumber"
            android:layout_row="1"
            android:layout_column="2"/>
        <Button
            android:id="@+id/button7"
            android:text="@string/seven"
            android:onClick="putNumber"
            android:layout_row="0"
            android:layout_column="0"/>
        <Button
            android:id="@+id/button8"
            android:text="@string/eight"
            android:onClick="putNumber"
            android:layout_row="0"
            android:layout_column="1"/>
        <Button
            android:id="@+id/button9"
            android:text="@string/nine"
            android:onClick="putNumber"
            android:layout_row="0"
            android:layout_column="2"/>
        <Button
            android:id="@+id/buttonDot"
            android:text="@string/dot"
            android:onClick="putDot"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:id="@+id/buttonClear"
            android:text="@string/clear"
            android:onClick="clearNum"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            android:id="@+id/unit1_button"
            android:text="@string/inches"
            android:onClick="switchUnit"
            android:layout_row="0"
            android:layout_column="3"/>
        <Button
            android:id="@+id/unit2_button"
            android:text="@string/centimeters"
            android:onClick="switchUnit"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowSpan="2"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>